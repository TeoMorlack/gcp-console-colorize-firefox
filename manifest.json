{
  "manifest_version": 2,
  "name": "GCP console colorize",
  "description": "Change GCP console color",
  "author": "Yuki Furuyama",
  "version": "1.5",
  "icons": {
    "16": "icon/icon_16x16.png",
    "48": "icon/icon_48x48.png",
    "128": "icon/icon_128x128.png"
  },
  "content_scripts": [
    {
      "matches": [
        "https://console.cloud.google.com/*"
      ],
      "js": ["main.js"]
    }
  ],
  "background": {
    "scripts": ["background.js"],
    "persistent": false
  },
  "options_ui": {
    "page": "options.html",
    "chrome_style": true
  },
  "permissions": [
    "storage",
    "webNavigation"
  ],


  // section for Firefox port (Author:araigumaG)
  "browser_specific_settings" : {
    "gecko": {
      "id" : "{d83faea0-374c-4c3d-88de-d7409d1044da}"
    }
  }
}
